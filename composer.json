{
    "name": "akeel26/slim3-starter-kit",
    "description": "A Slim Framework starter kit application for rapid development",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/akeel26/slim3-starter-kit",
    "license": "MIT",
    "authors": [
        {
            "name": "Akeel Ameen",
            "email": "akeel26@gmail.com",
            "homepage": "http://www.akeelameen.com/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "robmorgan/phinx": "^0.9.2",
        "illuminate/database": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
